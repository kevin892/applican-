<div class="notes-index-container">
  <h1><%= @user.first_name%> Notes</h1>

  <ul class="list-inline">
    <% @notes.each do |note| %>
    <div class="list-group-item list-group-item-action list-group-item-light">
    <li><%= button_to note.title, note_path(note), method: :get, class: "btn btn-primary" %> -<%= note.created_at %></li>
    </div>
    <% end %>
  </ul>
  <%# <div class="btn btn-primary"> %>
    <%= link_to "Create Note", new_note_path, class: "btn btn-primary"%>
  <%# </div> %>
</div>

