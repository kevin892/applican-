<div class="notes-index-container">

  <h1><%= @user.add_s%> Notes 📝</h1>
  <%= form_tag notes_path, method: :get do %>
  <%= text_field_tag :search_term %>
  <%= submit_tag "Search", class: "btn btn-info "%>

  <br>
  <br>
  <% end %>
  <ul class="list-inline">
    <% @notes.each do |note| %>
    <div class="list-group-item list-group-item-action list-group-item-light">
    <li><%= link_to note.title, note_path(note), method: :get, class: "btn btn-info"  %> -<%= note.short_date %></li>
    </div>
    <% end %>
  </ul>
  <%# <div class="btn btn-info"> %>
    <%= link_to "Create Note", new_note_path, class: "btn btn-info"%>
  <%# </div> %>
</div>
