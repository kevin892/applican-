<div class="notes-new-container">
    <h1>New Note</h1><br><br>
    <div class="form-group">
        <%= form_for(@note) do |f| %>
            <%= f.label "Title: " %>
            <%= f.text_field :title, class: "form-control" %>
            <br>
            <%= f.label "Body: " %>
            <%= f.text_area :body, size: "30x10", class: "form-control" %>
            <br>
            <%= f.submit "Add note", class: "btn btn-info" %>
        <% end %>
    </div>
</div>    

