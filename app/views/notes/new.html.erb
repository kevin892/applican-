<div class="notes-new-container">
  <h1>New Note</h1><br><br>
  <%@note.errors.full_messages.each do |message| %>
    <p><%=message%></p>
  <%end%>
  <div class="form-group">
    <%= form_for(@note) do |f| %>
    <%= f.label "Title: " %>
    <%= f.text_field :title, class: "form-control" %><br><br>
    <%= f.label "Body: " %>
    <%= f.text_area :body, class: "form-control" %><br><br>
    <%= f.submit "Add note", class: "btn btn-info" %>
  <% end %>
</div>
</div>
