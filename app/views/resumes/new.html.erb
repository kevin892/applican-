<div class="resume-generator-container"> 
  <h1>Resume Generator</h1><br><br>

  <%= form_for(@resume) do |f| %>
    <div class="form-group">
        <%= f.label "Bio: " %><br><br>
        <%= f.text_area :bio, class: "form-control" %><br><br>
    </div>  
    <div class="form-group">
      <%= f.label "Skills: " %>
      <p>(Please seperate with ",")</p>
      <%= f.text_area :skills, class: "form-control"%><br><br>
    </div>  
    <div class="form-group">
      <%= f.label "Education: " %>
        <p>(Please seperate with ",")</p>
      <%= f.text_field :education, class: "form-control" %><br><br>
    </div>  
    <div class="form-group">
      <%= f.label "Past Job " %>
        <p>(Please seperate with ",")</p>
      <%= f.text_field :recent_job, class: "form-control"%><br><br>
    </div>  
      <%= f.submit "Finished", class: "btn btn-primary"%>
  <% end %>
</div>
