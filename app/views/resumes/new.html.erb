<div class="resume-generator-container">
  <h1>Resume Generator</h1><br><br>

<%= form_for(@resume) do |f| %>
    <h3>Info</h3>
    <%= f.label "Bio: " %><br><br>
    <%= f.text_area :bio %><br><br>
    <%= f.label "Skills: " %>
    <h5>(Please seperate with ",")</h5>
    <%= f.text_area :skills %><br><br>
    <h3>Education</h3>
    <%= f.label "School: " %>
    <%= f.text_field :school %><br><br>
    <%= f.label "Degree: " %>
    <%= f.text_field :degree %><br><br>
    <%= f.label "Year Graduated: " %>
    <%= f.number_field :grad_year %><br><br>
    <h3>Job History</h3>
    <%= f.label "Company: " %>
    <%= f.text_field :last_job_company %><br><br>
    <%= f.label "Position " %>
    <%= f.text_field :last_job_title %><br><br>
    <%= f.label "Job Description: " %>
    <%= f.text_area :last_job_description %><br><br>
    <%= f.label "Start Date: " %>
    <%= f.date_field :last_job_start_date %><br><br>
    <%= f.label "End Date: " %>
    <%= f.date_field :last_job_end_date %><br><br>

    <%= f.submit "Finished" %>
<% end %>
